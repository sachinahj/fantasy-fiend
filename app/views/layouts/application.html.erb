<!DOCTYPE html>
<html>
<head>
  <title>FF Fame</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="navbar">
    <div class="navbar-inner">
      <!-- <a class="brand" id="title" href="#">Fantasy Football</a> -->
      <%= link_to "Fantasy Football", root_path,  {class: "brand", id: "title"} %>
      <ul class="nav pull-right">
        <li class="divider-vertical"></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            Cheatsheets
            <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "Position Players", cheatsheet_path %></li>
            <li><%= link_to "Ks and DSTs", cheatsheet_KsAndDSTs_path %></li>
          </ul>
        </li>
        <li class="divider-vertical"></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            Breakdown
            <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "Draft", breakdown_draft_path  %></li>
            <li><%= link_to "Player",   breakdown_players_path  %></li>
          </ul>
        </li>
      </ul>
    </div>
  </div>

  <div class="container">

    <%= yield %>
  
  </div>

</body>
</html>
