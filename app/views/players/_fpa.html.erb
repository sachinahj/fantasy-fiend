<!-- full width row -->
<div class="row">
  <!-- quarterbacks and wide receivers -->
  <div class="col-sm-6 col-md-6 text-center">
    
    <!-- quarterbacks -->
    <div class="row">
      <div class="col-sm-12 col-md-12 text-center">
        <h6 class="stat-category">Quarterbacks</h6>
      </div>
    </div>
    
    <div class="row">
      <div class="col-sm-8 col-md-8 text-left">
        <p>Rank</p>
      </div>
      <div class="col-sm-4 col-md-4 text-right">
        <p><%= @stat["fpa_qb_rank"] %></p>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-8 col-md-8 text-left">
        <p>Points Allowed/Week</p>
      </div>
      <div class="col-sm-4 col-md-4 text-right">
        <p><%= @stat["fpa_qb_fpa"] %></p>
      </div>
    </div>

    <!-- wide receivers -->
    <div class="row">
      <div class="col-sm-12 col-md-12 text-center">
        <h6 class="stat-category">Wide Receivers</h6>
      </div>
    </div>
    
    <div class="row">
      <div class="col-sm-8 col-md-8 text-left">
        <p>Rank</p>
      </div>
      <div class="col-sm-4 col-md-4 text-right">
