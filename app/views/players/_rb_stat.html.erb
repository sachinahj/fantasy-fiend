<!-- full width row -->
<div class="row">

  <!-- rushing and receiving data -->
  <div class="col-sm-6 col-md-6 text-center">
    <!-- rushing -->
    <div class="row">
      <div class="col-sm-12 col-md-12 text-center">
        <h5>Rushing</h5> 
      </div>
    </div>
    
    <div class="row">
      <div class="col-sm-8 col-md-8 text-left">
        <p>Attempts</p>
      </div>
      <div class="col-sm-4 col-md-4 text-right">
        <p><%= @stat["rush_attempts"] ? @stat["rush_attempts"] : "----" %></p>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-8 col-md-8 text-left">
        <p>Yards</p>
      </div>
      <div class="col-sm-4 col-md-4 text-right">
        <p><%= @stat["rush_yards"] ? @stat["rush_yards"] : "----" %></p>
      </div>
    </div>


    <div class="row">
      <div class="col-sm-8 col-md-8 text-left">
        <p>Yards/Attempt</p>
      </div>
      <div class="col-sm-4 col-md-4 text-right">
        <p><%= @stat["rush_yards_per_attempt"] ? @stat["rush_yards_per_attempt"] : "----" %></p>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-8 col-md-8 text-left">
        <p>Touchdowns</p>
      </div>
      <div class="col-sm-4 col-md-4 text-right">
        <p><%= @stat["rush_touchdowns"] ? @stat["rush_touchdowns"] : "----" %></p>
      </div>
    </div>
    
    <!-- receiving -->
    <div class="row">
      <div class="col-sm-12 col-md-12 text-center">
        <h5>Receiving</h5> 
      </div>
    </div>
    
    <div class="row">
      <div class="col-sm-8 col-md-8 text-left">
        <p>Targets</p>
      </div>
      <div class="col-sm-4 col-md-4 text-right">
        <p><%= @stat["receive_targets"] ? @stat["receive_targets"] : "----" %></p>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-8 col-md-8 text-left">
        <p>Receptions</p>
      </div>
      <div class="col-sm-4 col-md-4 text-right">
        <p><%= @stat["receive_receptions"] ? @stat["receive_receptions"] : "----" %></p>
      </div>
    </div>


    <div class="row">
      <div class="col-sm-8 col-md-8 text-left">
        <p>Yards</p>
      </div>
      <div class="col-sm-4 col-md-4 text-right">
        <p><%= @stat["receive_yards"] ? @stat["receive_yards"] : "----" %></p>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-8 col-md-8 text-left">
        <p>Touchdowns</p>
      </div>
      <div class="col-sm-4 col-md-4 text-right">
        <p><%= @stat["receive_touchdowns"] ? @stat["receive_touchdowns"] : "----" %></p>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-8 col-md-8 text-left">
        <p>Completion %</p>
      </div>
      <div class="col-sm-4 col-md-4 text-right">
        <p><%= @stat["receive_completion_percent"] ? @stat["receive_completion_percent"] : "----" %></p>
      </div>
    </div>
    
  </div>

  <!-- fantasy data -->
  <div class="col-sm-6 col-md-6 text-center">
  <!-- fantasy -->
    <div class="row">
      <div class="col-sm-12 col-md-12 text-center">
        <h5>Fantasy</h5>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-8 col-md-8 text-left">
        <p>Fumbles</p>
      </div>
      <div class="col-sm-4 col-md-4 text-right">
        <p><%= @stat["fumbles"] ? @stat["fumbles"] : "----" %></p>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-8 col-md-8 text-left">
        <p>Fumbles Lost</p>
      </div>
      <div class="col-sm-4 col-md-4 text-right">
        <p><%= @stat["fumbles_lost"] ? @stat["fumbles_lost"] : "----" %></p>
      </div>
    </div>
    

    <div class="row">
      <div class="col-sm-8 col-md-8 text-left">
        <p>Fantasy Points</p>
      </div>
      <div class="col-sm-4 col-md-4 text-right">
        <p><%= @stat["fantasy_points"] ? @stat["fantasy_points"] : "----" %></p>
      </div>
    </div>
    
    <div class="row">
      <div class="col-sm-8 col-md-8 text-left">
        <p>FPts/Week</p>
      </div>
      <div class="col-sm-4 col-md-4 text-right">
        <p><%= @stat["fantasy_points_per_week"] ? @stat["fantasy_points_per_week"] : "----" %></p>
      </div>
    </div>

  </div>

</div>