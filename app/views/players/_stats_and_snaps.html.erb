<div class="col-sm-12 col-md-12 text-center">

<!-- full width container -->
  <div class="row text-center">
    <div class="col-sm-12 col-md-12">
      <hr class="stats-divider">
      <h5>2013 Stats</h5>
      <hr class="stats-divider">
    </div>
  </div>

  <!-- stats and snaps -->
  <div class="row">
  
    <!-- stats header -->
    <div class="col-sm-6 col-md-6">
      <div class="row text-center">
        <div class="col-sm-12 col-md-12">
          <h5 class="stat-category">Stats</h5>
        </div>
      </div>
      <% case @player.position %>
      <% when "QB" %>
        <%= render "qb_stat" %>
      <% when "RB" %>
        <%= render "rb_stat" %>
      <% when "WR" %>
        <%= render "wr_stat" %>
      <% when "TE" %>
        <%= render "te_stat" %>
      <% when "K" %>
        <%= render "k_stat" %>
      <% when "DST" %>
        <%= render "dst_stat" %>
      <% else %>

      <% end %>
    </div>

    <!-- snaps header (fantasy points allowed if dst) -->
    <div class="col-sm-6 col-md-6">
      <div class="row text-center">
        <div class="col-sm-12 col-md-12">
          <% if @player.position != "DST"  %>
            <h5 class="stat-category">Snaps</h5>
          <% else %>
            <h5 class="stat-category">Fantasy Points Allowed</h5 class="stat-category">
          <% end %>
        </div>
      </div>
      <% if @player.position != "DST"  %>
        <%= render 'snap' %>
      <% elsif @player.position == "DST" %>
        <%= render 'fpa' %>
      <% end %>
    </div>
  </div>

</div>