<div class="col-sm-12 col-md-12 text-center">

  <div class="row-fluid text-center">
    <div class="col-sm-12 col-md-12">
      <hr>
      <h3>2013 Stats</h3>
      <hr>
    </div>
  </div>

  <div class="row-fluid">
    <div class="col-sm-6 col-md-6">
      <div class="row-fluid text-center">
        <div class="col-sm-12 col-md-12">
          <h4>Stats</h4>
        </div>
      </div>
      <% case @player.position %>
      <% when "QB" %>
        <%= render "qb_stat" %>
      <% when "RB" %>
        <%= render "rb_stat" %>
      <% when "WR" %>
        <%= render "wr_stat" %>
      <% when "TE" %>
        <%= render "te_stat" %>
      <% else %>
      <% end %>
    </div>
    <div class="col-sm-6 col-md-6">
      <div class="row-fluid text-center">
        <div class="col-sm-12 col-md-12">
          <h4>Snaps</h4>
        </div>
      </div>
      <%= render 'snap' %>
    </div>
  </div>

</div>